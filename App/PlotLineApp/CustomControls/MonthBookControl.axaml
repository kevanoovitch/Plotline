
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PlotLineApp.CustomControls.MonthBookControl"
    xmlns:vm="clr-namespace:PlotLineApp.Models"
    x:DataType="vm:MonthBook"
    
>


    <Border Background="LightBlue" Padding="10" Margin="5" BorderBrush="Gray" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="{Binding MonthText}" FontWeight="Bold" />
            <TextBlock Text="{Binding BookTitle}" />
        </StackPanel>
    </Border>

</UserControl>